{
  "name": "notsobot-tagscript",
  "displayName": "notsobot-tagscript",
  "description": "NotSoBot TagScript support in VSCode",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.50.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "notsobot-tagscript.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "nsb",
        "aliases": [
          "NotSoBot TagScript Script",
          "NotSoBot TagScript",
          "nsb"
        ],
        "extensions": [
          ".nsb",
          ".mnsb",
          ".nstb"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "nsb",
        "scopeName": "source.nsb",
        "path": "./syntaxes/nsb.tmLanguage.json",
        "embeddedLanguages": {
          "meta.embedded.block.javascript": "javascript"
        }
      }
    ],
    "snippets": [
      {
        "language": "nsb",
        "path": "./snippets/tagscript.json"
      },
      {
        "language": "nsb",
        "path": "./snippets/advanced_tagscript.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "ts-mocha -p tsconfig.json 'src/**/*.spec.ts'"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "ts-mocha": "^11.1.0"
  }
}
